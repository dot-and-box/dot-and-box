{
    "name": "dot-and-box",
    "version": "0.2.1",
    "description": "draw dots and boxes and do simple step based animations",
    "type": "module",
    "license": "MIT",
    "files": [
        "dist/dot-and-box.js",
        "dist/dot-and-box.umd.cjs"
